{
  "manifest_version": 3,
  "name": "Ежедневник Триллионера",
  "version": "1.0.0",
  "description": "Productivity-приложение на основе принципа 80/20 для достижения амбициозных целей",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
